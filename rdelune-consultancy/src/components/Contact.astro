---
import Icons from './Icons.astro';
---

<section id="contact" class="py-24 bg-gradient-to-b from-transparent via-primary-950/20 to-transparent">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-light mb-4">
        Let's Build Something 
        <span class="bg-gradient-to-r from-primary-400 to-accent-400 bg-clip-text text-transparent">
          Great Together
        </span>
      </h2>
      <p class="text-xl text-light/60 max-w-2xl mx-auto">
        Ready to transform your ideas into reality? Let's talk.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Calendar Booking -->
      <div class="bg-gradient-to-br from-primary-950/50 to-primary-900/30 rounded-xl border border-primary-800/30 p-8">
        <h3 class="text-2xl font-bold text-light mb-4 flex items-center space-x-2">
          <Icons name="calendar" size={24} class="text-primary-400" />
          <span>Book a Call</span>
        </h3>
        <p class="text-light/60 mb-6">
          Schedule a free 30-minute consultation to discuss your project
        </p>
        
        <!-- Cal.com Embed Placeholder -->
        <div class="bg-primary-950/50 rounded-lg p-8 border border-primary-700/30 min-h-[400px] flex items-center justify-center">
          <div class="text-center">
            <Icons name="calendar" size={48} class="text-primary-400 mx-auto mb-4" />
            <p class="text-light/60 mb-4">Calendar widget loads here</p>
            <a href="https://cal.com/rdelune" target="_blank" rel="noopener" class="inline-flex items-center space-x-2 bg-gradient-to-r from-primary-500 to-accent-500 text-white px-6 py-3 rounded-lg hover:shadow-lg hover:shadow-primary-500/25 transition-all">
              <span>Open Calendar</span>
              <Icons name="arrow" size={16} />
            </a>
          </div>
        </div>

        <!-- Quick Links -->
        <div class="mt-6 flex items-center justify-center space-x-6">
          <a href="mailto:contact@rdelune.com" class="flex items-center space-x-2 text-light/60 hover:text-primary-400 transition-colors">
            <Icons name="mail" size={20} />
            <span>Email</span>
          </a>
          <a href="https://linkedin.com/in/rdelune" target="_blank" rel="noopener" class="flex items-center space-x-2 text-light/60 hover:text-primary-400 transition-colors">
            <Icons name="linkedin" size={20} />
            <span>LinkedIn</span>
          </a>
          <a href="https://github.com/rdelune" target="_blank" rel="noopener" class="flex items-center space-x-2 text-light/60 hover:text-primary-400 transition-colors">
            <Icons name="github" size={20} />
            <span>GitHub</span>
          </a>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-gradient-to-br from-primary-950/50 to-primary-900/30 rounded-xl border border-primary-800/30 p-8">
        <h3 class="text-2xl font-bold text-light mb-4 flex items-center space-x-2">
          <Icons name="mail" size={24} class="text-primary-400" />
          <span>Send a Message</span>
        </h3>
        <p class="text-light/60 mb-6">
          Prefer email? Drop us a message and we'll get back within 24 hours
        </p>

        <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-4">
          <!-- Name -->
          <div>
            <label for="name" class="block text-light/80 text-sm mb-2">Your Name *</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required 
              class="w-full bg-primary-950/50 border border-primary-700/30 rounded-lg px-4 py-3 text-light placeholder-light/30 focus:outline-none focus:border-primary-500 transition-colors"
              placeholder="John Doe"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-light/80 text-sm mb-2">Email Address *</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              class="w-full bg-primary-950/50 border border-primary-700/30 rounded-lg px-4 py-3 text-light placeholder-light/30 focus:outline-none focus:border-primary-500 transition-colors"
              placeholder="john@company.com"
            />
          </div>

          <!-- Project Type -->
          <div>
            <label for="project" class="block text-light/80 text-sm mb-2">Project Type *</label>
            <select 
              id="project" 
              name="project" 
              required 
              class="w-full bg-primary-950/50 border border-primary-700/30 rounded-lg px-4 py-3 text-light focus:outline-none focus:border-primary-500 transition-colors"
            >
              <option value="">Select a service</option>
              <option value="consultancy">Consultancy</option>
              <option value="development">Software Development</option>
              <option value="startup">Startup Support</option>
              <option value="other">Other</option>
            </select>
          </div>

          <!-- Budget Range -->
          <div>
            <label for="budget" class="block text-light/80 text-sm mb-2">Budget Range</label>
            <select 
              id="budget" 
              name="budget" 
              class="w-full bg-primary-950/50 border border-primary-700/30 rounded-lg px-4 py-3 text-light focus:outline-none focus:border-primary-500 transition-colors"
            >
              <option value="">Prefer not to say</option>
              <option value="<5k">Less than €5,000</option>
              <option value="5-15k">€5,000 - €15,000</option>
              <option value="15-50k">€15,000 - €50,000</option>
              <option value="50k+">€50,000+</option>
            </select>
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-light/80 text-sm mb-2">Tell us about your project *</label>
            <textarea 
              id="message" 
              name="message" 
              rows="4" 
              required 
              class="w-full bg-primary-950/50 border border-primary-700/30 rounded-lg px-4 py-3 text-light placeholder-light/30 focus:outline-none focus:border-primary-500 transition-colors resize-none"
              placeholder="Brief description of your project and goals..."
            ></textarea>
          </div>

          <!-- Submit -->
          <button 
            type="submit" 
            class="w-full bg-gradient-to-r from-primary-500 to-accent-500 text-white py-3 rounded-lg font-semibold hover:shadow-lg hover:shadow-primary-500/25 transition-all flex items-center justify-center space-x-2"
          >
            <span>Send Message</span>
            <Icons name="arrow" size={20} />
          </button>

          <p class="text-xs text-light/40 text-center">
            We respect your privacy. Your data will never be shared.
          </p>
        </form>
      </div>
    </div>
  </div>
</section>