---
import Icons from './Icons.astro';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Animated Background -->
  <div class="absolute inset-0 -z-10">
    <!-- Background Image -->
    <div class="absolute inset-0 opacity-5">
      <img 
        src="/images/hero-bg.webp" 
        alt="" 
        class="w-full h-full object-cover"
        loading="eager"
      />
    </div>
    
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl animate-pulse-slow"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-accent-500/20 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s"></div>
    
    <!-- Grid Pattern -->
    <svg class="absolute inset-0 w-full h-full opacity-5" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="1"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>

  <div class="container mx-auto px-6 text-center animate-fade-in">
    <!-- Main Content -->
    <div class="max-w-4xl mx-auto">
      <h1 class="text-5xl md:text-7xl font-bold text-light mb-6">
        Ship Fast. 
        <span class="bg-gradient-to-r from-primary-400 to-accent-400 bg-clip-text text-transparent">
          Ship Right.
        </span>
      </h1>
      
      <p class="text-xl md:text-2xl text-light/80 mb-4">
        15+ Years Building Software That Scales
      </p>
      
      <p class="text-lg text-light/60 mb-12 max-w-2xl mx-auto">
        From Spotify to Startups • Medical Devices to MVPs • GDPR to Cloud Architecture
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="#contact" class="group bg-gradient-to-r from-primary-500 to-accent-500 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:shadow-xl hover:shadow-primary-500/25 transition-all flex items-center space-x-2">
          <span>Book Free Consultation</span>
          <Icons name="arrow" size={20} class="group-hover:translate-x-1 transition-transform" />
        </a>
        <a href="#services" class="text-light/80 px-8 py-4 rounded-lg text-lg border border-primary-500/30 hover:bg-primary-500/10 transition-all">
          Explore Services
        </a>
      </div>

      <!-- Trust Indicators -->
      <div class="mt-16 flex flex-wrap justify-center gap-8 text-light/60">
        <div class="flex items-center space-x-2">
          <Icons name="check" size={20} class="text-accent-400" />
          <span>ISO Certified</span>
        </div>
        <div class="flex items-center space-x-2">
          <Icons name="check" size={20} class="text-accent-400" />
          <span>GDPR Compliant</span>
        </div>
        <div class="flex items-center space-x-2">
          <Icons name="check" size={20} class="text-accent-400" />
          <span>24h Response</span>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-light/40">
        <path d="M12 5v14M19 12l-7 7-7-7"/>
      </svg>
    </div>
  </div>
</section>