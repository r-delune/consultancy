---
const clients = [
  { 
    name: 'CommPAL', 
    tech: 'Medical AI/ML', 
    image: '/images/commpal3.webp',
    description: 'ISO 62304 compliant medical device platform'
  },
  { 
    name: 'QuickMinutes', 
    tech: 'Blockchain', 
    image: '/images/quickminutes.webp',
    description: 'Meeting minutes on blockchain'
  },
  { 
    name: 'WAGERR', 
    tech: 'Distributed Systems', 
    image: '/images/wagerr.webp',
    description: 'Decentralized betting platform'
  },
  { 
    name: 'UniCov', 
    tech: 'Data Science', 
    image: '/images/unicov.webp',
    description: 'COVID-19 data visualization'
  },
  { 
    name: 'LRNR', 
    tech: 'SaaS Platform', 
    image: '/images/lrnr.webp',
    description: 'AI-powered learning platform'
  },
  { 
    name: 'Rocudo', 
    tech: 'Web Platform', 
    image: '/images/rocudo.webp',
    description: 'Digital transformation solutions'
  },
];

const techStack = [
  'React', 'Vue', 'TypeScript', 'Node.js', 'AWS', 'Docker', 
  'TensorFlow', 'Laravel', 'Python', 'PostgreSQL', 'MongoDB', 'Redis'
];
---

<section id="clients" class="py-24 bg-gradient-to-b from-transparent via-primary-950/20 to-transparent">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-light mb-4">
        Trusted By 
        <span class="bg-gradient-to-r from-primary-400 to-accent-400 bg-clip-text text-transparent">
          Industry Leaders
        </span>
      </h2>
      <p class="text-xl text-light/60 max-w-2xl mx-auto">
        From startups to enterprises, we've delivered excellence
      </p>
    </div>

    <!-- Client Logos Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16 max-w-5xl mx-auto">
      {clients.map((client, index) => (
        <div 
          class="group animate-fade-in" 
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Project Card -->
          <div class="relative overflow-hidden bg-gradient-to-br from-primary-950/50 to-primary-900/30 rounded-xl border border-primary-700/30 group-hover:border-primary-500/50 transition-all">
            <!-- Image Container -->
            <div class="aspect-video overflow-hidden bg-primary-950/50">
              <img 
                src={client.image} 
                alt={`${client.name} project`}
                class="w-full h-full object-cover opacity-70 group-hover:opacity-100 group-hover:scale-105 transition-all duration-500"
                loading="lazy"
              />
            </div>
            <!-- Content Overlay -->
            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-dark via-dark/90 to-transparent p-4">
              <h3 class="text-light font-bold text-lg">{client.name}</h3>
              <p class="text-primary-400 text-sm font-medium mb-1">{client.tech}</p>
              <p class="text-light/60 text-xs">{client.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Tech Stack -->
    <div class="border-t border-primary-800/30 pt-12">
      <h3 class="text-center text-lg text-light/60 mb-8">Technologies We Master</h3>
      <div class="flex flex-wrap justify-center gap-3 max-w-4xl mx-auto">
        {techStack.map((tech) => (
          <span class="px-4 py-2 bg-primary-900/30 border border-primary-700/30 rounded-lg text-light/80 hover:border-primary-500/50 hover:bg-primary-900/50 transition-all cursor-default">
            {tech}
          </span>
        ))}
      </div>
    </div>

    <!-- Stats -->
    <div class="grid md:grid-cols-4 gap-8 mt-16">
      {[
        { number: '15+', label: 'Years Experience' },
        { number: '50+', label: 'Projects Delivered' },
        { number: '98%', label: 'Client Satisfaction' },
        { number: '24h', label: 'Response Time' }
      ].map((stat) => (
        <div class="text-center">
          <div class="text-4xl font-bold bg-gradient-to-r from-primary-400 to-accent-400 bg-clip-text text-transparent mb-2">
            {stat.number}
          </div>
          <div class="text-light/60">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>